@startuml
!pragma teoz true


skinparam backgroundColor #EEEBDC
skinparam handwritten true

skinparam sequence {
	ArrowColor DeepSkyBlue
	ActorBorderColor DeepSkyBlue
	LifeLineBorderColor blue
	LifeLineBackgroundColor #A9DCDF
	
	ParticipantBorderColor DeepSkyBlue
	ParticipantBackgroundColor DodgerBlue
	ParticipantFontName Impact
	ParticipantFontSize 17
	ParticipantFontColor #A9DCDF
	
	ActorBackgroundColor aqua
	ActorFontColor DeepSkyBlue
	ActorFontSize 17
	ActorFontName Aapex
}



actor Administrativo
actor Sanitario
actor Médico
actor Paciente
participant "Unidad de diagnóstico" as UD

activate UD
activate Paciente
Paciente -> UD : 1. RegistrarAsistenciaACita(DNI)
UD --> Paciente : 1.1. confirmacion
deactivate UD

activate Sanitario
Sanitario -> Paciente : 2.RealizarPrueba()
deactivate Sanitario

activate UD
activate Médico
Médico -> UD : 3. InformarPrueba(Informe)
UD --> Médico : 3.1. confimacion
deactivate Médico


activate Administrativo
Administrativo -> UD : 4. RecogerResultadosPrueba(DNI)
UD --> Administrativo : 4.1. resultadosdelaspruebas
Administrativo --> Paciente : 4.2. DarResultados(resultadosdelaspruebas)
deactivate Administrativo
deactivate UD
deactivate Paciente
@enduml