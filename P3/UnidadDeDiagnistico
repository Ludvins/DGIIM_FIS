@startuml
!pragma teoz true


skinparam backgroundColor #EEEBDC
skinparam handwritten true

skinparam sequence {
	ArrowColor DeepSkyBlue
	ActorBorderColor DeepSkyBlue
	LifeLineBorderColor blue
	LifeLineBackgroundColor #A9DCDF
	
	ParticipantBorderColor DeepSkyBlue
	ParticipantBackgroundColor DodgerBlue
	ParticipantFontName Impact
	ParticipantFontSize 17
	ParticipantFontColor #A9DCDF
	
	ActorBackgroundColor aqua
	ActorFontColor DeepSkyBlue
	ActorFontSize 17
	ActorFontName Aapex
}



actor Administrativo
actor Sanitario
actor Médico
actor Paciente
participant "Unidad de diagnóstico" as UD

activate UD
activate Paciente
Paciente -> UD :  RegistrarAsistenciaACita(DNI)
UD --> Paciente :  confirmacion
deactivate UD

activate Sanitario
Sanitario -> Paciente : RealizarPrueba()
deactivate Sanitario

activate UD
activate Médico
Médico -> UD :  InformarPrueba(Informe)
UD --> Médico :  confimacion
deactivate Médico


activate Administrativo
Administrativo -> UD :  RecogerResultadosPrueba(DNI)
UD --> Administrativo :  resultadosdelaspruebas
Administrativo --> Paciente :  DarResultados(resultadosdelaspruebas)
deactivate Administrativo
deactivate UD
deactivate Paciente
@enduml